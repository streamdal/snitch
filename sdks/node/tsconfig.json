{
  "compilerOptions": {
    "module": "nodenext",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "build",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__"
  ]
}
